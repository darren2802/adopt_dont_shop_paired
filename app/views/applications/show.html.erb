<h4>Application <%= @application.id %></h4>
<br>
<% if @application.approved %>
  <%= link_to 'Revoke This Application', "/applications/#{@application.id}/revoke" %>
<% else %>
  <%= link_to 'Approve This Application', "/applications/#{@application.id}/approve" %>
<% end %>
<br><br>
<table class="table">
  <tr>
    <td>Name:</td>
    <td><%= @application.name %></td>
  </tr>
  <tr>
    <td>Address:</td>
    <td><%= @application.address %></td>
  </tr>
  <tr>
    <td>City:</td>
    <td><%= @application.city %></td>
  </tr>
  <tr>
    <td>State:</td>
    <td><%= @application.state %></td>
  </tr>
  <tr>
    <td>Zip:</td>
    <td><%= @application.zip %></td>
  </tr>
  <tr>
    <td>Phone:</td>
    <td><%= @application.phone %></td>
  </tr>
  <tr>
    <td>Motivation:</td>
    <td><%= @application.motivation %></td>
  </tr>
</table>
