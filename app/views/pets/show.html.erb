<div class="grid">
  <div class="grid_item">
    <img src="<%= @pet.image %>" class="grid_img"><br>
    <%= @pet.description %>
  </div>
  <div class="grid_item">
    <h2><%= @pet.name %></h2>
    <%= @pet.breed %><br>
    <%= link_to "#{@pet.shelter.name}", "/shelters/#{@pet.shelter_id}" %>
    <br><br>

    Age: <%= @pet.age_approx %><br>
    <%= @pet.sex.titleize %><br>

    <br>
    <% if @favorited %>
      <%= link_to "Remove pet From Favorites", "/favorites/#{@pet.id}", method: :delete %>
    <% else %>
      <%= link_to "Favorite This Pet", "/favorites/#{@pet.id}" %>
    <% end %>
    <br>
    <%= link_to 'Applications For This Pet', "/pets/#{@pet.id}/applications" %><br><br>
    <% if @reserved_for %>
      <%= "Application Pending" %><br>
      <%= "On Hold For: #{@reserved_for}" %>
    <% else %>
      <i><%= "Adoptable" %></i>
    <% end %>
    <br>
    <hr>
    <%= link_to 'Update', "/pets/#{@pet.id}/edit", :class => 'tab-space' %>
    <%= link_to 'Delete', "/pets/#{@pet.id}/", method: :delete, :class => 'tab-space' %>
  </div>
</div>
