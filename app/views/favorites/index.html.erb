<section id="pets_favorited">
  <h2 style='display: inline;'>Favorites</h2>
  <%= link_to 'Apply to Adopt Favorited Pets', 'favorites/application', :class => 'tab-space' %>
  <%= link_to 'Delete All Favorites', "/favorites/all", method: :delete, :class => 'tab-space' %>
  <hr>
  <% if @pet_favorites.empty? %>
    <p><%= 'No pets have been favorited...' %></p>
  <% end %>

  <div class="grid">
    <% @pet_favorites.each_key do |key| %>
      <div class="grid_thumbnail_item" id="favorite-<%= key %>">
        <h6><%= link_to @pet_favorites[key]['name'], "/pets/#{key}" %></h6>
        <img src="<%= @pet_favorites[key]['image'] %>" class="grid_thumbnail_img">
        <br><br>
        <%= link_to 'Remove pet From Favorites', "/favorites/#{key}/index", method: :delete %>
      </div>
    <% end %>
  </div>
  <br>
  <hr>
</section>
<br>
<h4>Pets Applied For</h4>
<div class="grid" id="pets_applied_for">
  <% @pets_applied_for.each do |key,value| %>
    <div class="grid_thumbnail_item" id="pet-applied-for-<%= key %>">
      <h6><%= link_to value[:name], "/pets/#{key}" %></h6>
      <img src="<%= value[:image] %>" class="grid_thumbnail_img">
    </div>
  <% end %>
</div>
<hr>
<br>
<h4>Pets with Approved Applications</h4>
<div class="grid" id="approved-applications">
  <% @pets_approved.each do |pet| %>
    <div class="grid_thumbnail_item" id="approved-pet-<%= pet.id %>">
      <h6><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h6>
      <img src="<%= pet.image %>" class="grid_thumbnail_img">
    </div>
  <% end %>
</div>
