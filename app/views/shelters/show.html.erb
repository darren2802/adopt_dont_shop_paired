<h2><%= @shelter.name %></h2>
<br><br>
<p><%= @shelter.address %></p>
<p><%= @shelter.city %></p>
<p><%= @shelter.state %></p>
<p><%= @shelter.zip %></p>
<br>
<% if @shelter.number_applications %>
  <p><%= "Number of applications on file for pets at this shelter: #{@shelter.number_applications}" %></p>
<% end %>
<br>
<%= link_to 'Pets at this shelter', "/shelters/#{@shelter.id}/pets" %>
<br><br><br>
<h4 style='display: inline;'>Reviews</h4>
<% if @shelter.average_review_rating %>
  <p><%= "Average review rating for this shelter: #{@shelter.average_review_rating.round(1)}" %></p>
<% end %>
<br><br>
<%= link_to 'Add Review', "/shelters/#{@shelter.id}/reviews/new" %>
<hr>
<% @shelter.reviews.each do |review| %>
  <section id="review-<%= review.id %>">
    <h6><%= review.title %></h6>
    <p><%= review.rating %></p>
    <p><%= review.content %></p>
    <img src="<%= review.image %>">
    <br><br>
    <%= link_to 'Edit Review', "/reviews/#{review.id}/edit" %>
    <%= link_to 'Delete Review', "/reviews/#{review.id}", method: :delete, :class => 'tab-space' %>
    <hr>
  </section>
<% end %>
