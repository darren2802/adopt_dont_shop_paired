<h4>Edit Shelter Review</h4>
<%= form_tag "/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, value="#{@review.title}" %>
  <br>
  <%= label_tag :rating %>
  <%= number_field_tag :rating, value="#{@review.rating}" %>
  <br>
  <%= label_tag :content %>
  <%= text_field_tag :content, value="#{@review.content}" %>
  <br>
  <%= label_tag :image %>
  <%= text_field_tag :image, value="#{@review.image}" %>
  <br>
  <%= submit_tag 'Save Changes' %>
<% end %>
